<div class="box box-primary" id="search-box" ng-controller="SearchCtrl" ng-cloak>

  <small id="search-tagline" class="open-sans">Search characters and leagues in DC Universe Online.</small>

  <div class="input-group">
    <input class="form-control" type="text" ng-model="searchModel.keyword" wd-enter-key="search()" placeholder="{{placeholder()}}">
    <span class="input-group-btn">
      <button class="btn btn-default" type="button" ng-click="search()"><i class="fa fa-search"></i></button>
    </span>
  </div>

  <div id="search-options" class="open-sans">

    <small>Find</small>

    <div class="btn-group">
      <button class="btn btn-xs btn-default dropdown-toggle" type="button" data-toggle="dropdown">
        {{searchModel.cardinality}} <i class="fa fa-chevron-down"></i>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><a href="" ng-click="searchModel.set('cardinality', 'one')">one</a></li>
        <li><a href="" ng-click="searchModel.set('cardinality', 'all')">all</a></li>
      </ul>
    </div>

    <div class="btn-group">
      <button class="btn btn-xs btn-default dropdown-toggle" type="button" data-toggle="dropdown">
        {{searchModel.dataType}}{{searchModel.pluralize()}} <i class="fa fa-chevron-down"></i>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><a href="" ng-click="searchModel.set('dataType', 'character')">character{{searchModel.pluralize()}}</a></li>
        <li><a href="" ng-click="searchModel.set('dataType', 'league')">league{{searchModel.pluralize()}}</a></li>
      </ul>
    </div>

    <small>in</small>

    <div class="btn-group">
      <button class="btn btn-xs btn-default dropdown-toggle" type="button" data-toggle="dropdown">
        {{searchModel.worldLabel()}} <i class="fa fa-chevron-down"></i>
      </button>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li><a href="" ng-click="searchModel.set('world', 'usps')">USPS</a></li>
        <li><a href="" ng-click="searchModel.set('world', 'uspc')">USPC</a></li>
        <li><a href="" ng-click="searchModel.set('world', 'eups')">EUPS</a></li>
        <li><a href="" ng-click="searchModel.set('world', 'eupc')">EUPC</a></li>
        <li ng-show="searchModel.cardinality === 'all'"><a href="" ng-click="searchModel.set('world', 'all')">all worlds</a></li>
      </ul>
    </div>

  </div>
</div>
